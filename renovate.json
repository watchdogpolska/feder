{
  "extends": [
    "config:recommended",
    "lockFileMaintenance": {
      "enabled": true
    }
  ],
  "enabledManagers": [
    "dockerfile",
    "pip_requirements",
    "pip_setup",
    "github-actions",
    "npm"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "pip_requirements"
      ],
      "matchFileNames": [
        "requirements/dev.txt",
        "requirements/test.txt"
      ],
      "groupName": "non-production-dependencies"
    },
    {
      "matchManagers": [
        "pip_requirements"
      ],
      "matchPackageNames": [
        "gevent",
        "coveralls",
        "django-allauth",
        "django-guardian",
        "django-crispy-forms",
        "Sphinx",
        "lxml",
        "mysqlclient",
        "Pillow",
        "pytz"
      ],
      "automerge": true
    }
  ],
  "pip_requirements": {
    "fileMatch": [
      "requirements/.+?.txt"
    ]
  },
  "dockerfile": {
    "fileMatch": [
      "^.contrib/docker/Dockerfile\\..*$"
    ]
  },
  "constraints": {
    "node": "< 21.0.0",
    "django": [
      "^4.2",
      "^5.2"
    ],
    "datatables.net-plugins": "< 2.0.0",
    "datatables.net-buttons": "< 3.0.0",
    "datatables.net-buttons-bs": "< 3.0.0",
    "datatables.net-buttons-dt": "< 3.0.0",
    "datatables.net-bs": "< 2.0.0",
    "datatables.net-bs4": "< 2.0.0",
    "datatables.net-dt": "< 2.0.0"
  },
  "force": {
    "constraints": {
      "node": "< 21.0.0",
      "django": [
        "^4.2",
        "^5.2"
      ],
      "datatables.net-plugins": "< 2.0.0",
      "datatables.net-buttons": "< 3.0.0",
      "datatables.net-buttons-bs": "< 3.0.0",
      "datatables.net-buttons-dt": "< 3.0.0",
      "datatables.net-bs": "< 2.0.0",
      "datatables.net-bs4": "< 2.0.0",
      "datatables.net-dt": "< 2.0.0"
    }
  }
}
